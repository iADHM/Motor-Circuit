// C++ code
//
#include <Servo.h>

Servo servo_2;

void setup()
{
  servo_2.attach(2, 500, 2500);
}

void loop()
{
  servo_2.write(180);
  delay(2000); // Wait for 2000 millisecond(s)
  servo_2.write(120);
  delay(2000); // Wait for 2000 millisecond(s)
  servo_2.write(0);
  delay(2000); // Wait for 2000 millisecond(s)
}
